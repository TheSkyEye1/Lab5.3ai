<Window x:Class="Lab5._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Canvas x:Name="scene" HorizontalAlignment="Left" Height="500" Margin="50,50,0,0" VerticalAlignment="Top" Width="500" Background="#FFF0F0F0"/>
        <Button x:Name="StartB" Content="Start" HorizontalAlignment="Left" Height="50" Margin="580,120,0,0" VerticalAlignment="Top" Width="180" Click="StartB_Click"/>
        <Button x:Name="InitPopB" Content="Initialize Population" HorizontalAlignment="Left" Height="50" Margin="580,50,0,0" VerticalAlignment="Top" Width="180" Click="InitPopB_Click"/>
        <Label Content="Iteration:" HorizontalAlignment="Left" Height="36" Margin="580,190,0,0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="itcounter" Content="0" HorizontalAlignment="Left" Height="36" Margin="660,190,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
